  @model web_project.Models.Complaints

@{

    ViewData["Title"] = "contact";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap 5 Contact Form</title>
    <link rel="stylesheet" href="/css/contact.css">
    <a href="c:\users\amoha\source\repos\web project\web project\views\home\contact.cshtml"></a>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="./style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

 
</head>
<body>
    <div class="container mt-5 shadow ">
        <div class="row ">
            <div class="col-md-4 bg-gold p-5 text-white order-sm-first order-last">
                <h2>Contact us</h2>
                <p>for any complains and suggestion</p>
                <div class="d-flex mt-2">
                    <i class="bi bi-geo-alt"></i>
                    <p class="mt-3 ms-3"> el korba misr elgdeda </p>
                </div>
                <div class="d-flex mt-2">
                    <i class="bi bi-telephone-forward"></i>
                    <p class="mt-4 ms-3">Phone : 01024445344</p>
                </div>
                <div class="d-flex mt-2">
                    <i class="bi bi-envelope"></i>
                    <p class="mt-4 ms-3">Email : restaurant@gmail.com</p>
                </div>
                <div class="d-flex mt-2">
                    <i class="bi bi-instagram"></i>
                    <p class="mt-4 ms-3"> : restaurant</p>
                </div>
            </div>
            <div class="col-md-8 p-5 ">
                <h2>Get in touch</h2>
                <form class="row g-3 contactForm mt-4"  asp-action="Create">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName" asp-for="FirstName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <div id="firstNameError" class="text-danger"></div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">last Name</label>
						<input asp-for="LastName" type="text" class="form-control" id="lastname" >
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <div id="lastNameError" class="text-danger"></div>
                    </div>
                    <div class="col-12">
                        <label asp-for="Complaint" class="form-label">Your complain </label>
                        <input type="text" class="form-control" id="complain" asp-for="Complaint">
                        <span asp-validation-for="Complaint" class="text-danger"></span>
                        <div id="complainError" class="text-danger"></div>
                    </div>
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="inputEmail4" title="Enter a valid email address" asp-for="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div id="emailError" class="text-danger"></div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity" asp-for="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Number" class="form-label">Contact Number</label>
                        <input type="tel" class="form-control" id="number" asp-for="Number">
                        <span asp-validation-for="Number" class="text-danger"></span>
                        <div id="numberError" class="text-danger"></div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary mt-3 ">Submit</button>
                    </div>
                    <p id="thanks" class="text-success"></p>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

