@model web_project.Models.Login

@{
    ViewData["Title"] = "loginAdmin";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title></title>
  <script src="~/js/LoginAdmin.js"></script>
   
</head>
   
  
<body style="  background-color: burlywood;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6" style="background-color:blanchedalmond">
                <form asp-controller="Home" asp-action="ValidateLogin" method="post" class="needs-validation">
                    <h2 class="text-center m-2">Sign in as an Admin</h2>
                    <br>
                    <p>
                        Username:
                        <input id="usernameInput" type="text" class="form-control" asp-for="Username" >
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </p>
                    <p>
                        Password:
                        <input id="passwordInput" type="password" class="form-control" asp-for="Password"  >
					</p> <span asp-validation-for="Password" class="text-danger"></span> <p id="message" class=" danger"></p>
                    <input type="submit" value="Login" onclick="validateFunction(event)" class="btn btn-success " >
                    <p id="message">@Html.ValidationMessageFor(model => model.IsLoggedIn)</p>
                  
                </form>

                
            </div>
        </div>
    </div>
    </body>
